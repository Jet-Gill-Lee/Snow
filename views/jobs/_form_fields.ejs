<div class='employer-select'>
  <div class='form-item'>
  <label>Employer</label>
  <select name="employer">
  <% employers.forEach(employer => { %>
  <% if (job.employer === employer) { %>
    <option selected label="<%= employer.name %>" value=" <%= employer.id %> ">
  <% } else { %>
    <option label="<%=employer.name %>" value="<%= employer.id %>">
    <% } %>
  <% }) %>
  </select>
</div>
</div>
<div class="form-row">
  <div class="form-item">
    <label>Title</label>
    <input type="text" name="title" value="<%= job.title%>">
  </div>
  <div class="form-item">
    <label>Wage</label>
    <input type="number" name="wage" value="<%= job.wage %>">
  </div>
</div>
<div class="form-row">
  <div class='form-item'>
    <label>Job Description</label>
    <% if (job.description) { %>
      <textarea name="description" value="<%=job.description%>"> <%=job.description%> </textarea>
    <% } else { %>
    <textarea name="description" value="<%= job.description%>">Job description goes here</textarea>
    <% } %>
  </div>
  <div class="form-item">
    <label>Job Benefits</label>
    <% if (job.benefits) { %>
      <textarea name='benefits' value='<%=job.benefits%>'> <%=job.benefits%></textarea>
    <% } else { %>
      <textarea name="benefits" value="<%=job. description %>">Job benefits go here</textarea>
    <% } %>
  </div>
</div>
