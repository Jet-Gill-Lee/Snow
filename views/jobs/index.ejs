<h2 class='page-header'>Job Listings</h2>

<form action="/jobs" method="GET">
<label for="title">Job Title</label>
<input type="text" name="title" value="<% searchOptions.title %>">

<select name="employer">
  <option label="" value=""></option>
<% employers.forEach(employer => { %>
  <option label="<%= employer.name %>" value="<%= employer.id %>">
<% }) %>
</select>
<button type="submit">Search</button>

</form>

<br>
<% jobs.forEach(job => { %>
  <div> <% employers.forEach(employer => { %>
  <%  if (employer.id == job.employer) { %>
      <%= employer.name %>
 <% } %>
 <% }) %>
  <br>  <%= job.title %> <br> $<%= job.wage %>/hour </div>
  <a href="/jobs/<%= job.id %>">View</a>
  <a href="/jobs/<%= job.id %>/edit">Edit</a>
  <%- include('../partials/deleteForm', {url: `/jobs/${job.id}` }) %>
</form>
<% }) %>